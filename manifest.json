{
    "manifest_version": 3,
    "name": "Includes paid Promotion remover",
    "version": "1.0",
    "description": "Removes the 'Includes Paid Promotion button when hovering over a YouTube Video.",
    "permissions": ["scripting", "webNavigation"],
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    }
  }
  